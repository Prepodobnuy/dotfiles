@theme "/dev/null"

* {
	bg: #221610;
	background-color: @bg;
}


configuration {
	show-icons: true;
    location: 0;
	font: "Ubuntu Mono 12";	
	display-drun: "";
}

window { 
	width: 400px;
	transparency: "real";
	orientation: vertical;
	border-color: #FDFDFD;
	border: 1 1 1 1;
	border-radius: 8px;
	border-color: #556baa;
}

mainbox {
	children: [inputbar, listview];
}


// ELEMENT
// -----------------------------------

element {
	padding: 8 2;
	text-color: #c7c4c3;
}

element selected {
	text-color: #221610;
	background-color: #556baa;
	border-radius: 3px;
}

element-text {
	background-color: inherit;
	text-color: inherit;
}

element-icon {
	size: 18 px;
	background-color: inherit;
	padding: 0 4 0 0;
	alignment: vertical;
}

listview {
	columns: 2;
	lines: 12;
	padding: 8 0 0 0;
	fixed-height: true;
	fixed-columns: true;
	fixed-lines: true;
	border: 0 10 6 10;
}

// INPUT BAR 
//------------------------------------------------

entry {
	text-color: #c7c4c3;
	padding: 10 10 0 0;
	margin: 0 -2 0 0;
}

inputbar {
	padding: 0 0 0;
	margin: 0 0 0 0;
} 

prompt {
	text-color: #c7c4c3;
	padding: 10 6 0 10;
	margin: 0 -2 0 0;
}