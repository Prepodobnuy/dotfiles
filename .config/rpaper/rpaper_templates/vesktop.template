/**
* @name wal
* @author prepodobnuy
* @description A theme based on @Melonturtle_ stream design
*/

/* Remove decorations */

:root {
  /* --- User variables --- */

  /* Jumping GIF */
  --jumping-gif: url("https://i.imgur.com/dCd49s0.gif");

  /* Background (if you want an image replace it by : 

--background-tertiary-alt: url("image-link"); without that => */
  --background-tertiary-alt: (prBR90);

  /* Border-radius for the whole theme */
  --border-radius: 4px;
}

* {
  transition: 
    background-color 0.1s,
    color 10ms;

}

.iconVisibility_f6f816 {
  transition: transform 0.2s;
}
.iconVisibility_f6f816:hover {
}
.iconVisibility_f6f816:active {
  transform: translateY(2px);
}

.wrapper_f90abb {
  transition: transform 0.2s;
}
.wrapper_f90abb:hover {
}
.wrapper_f90abb:active {
  transform: scale(0.96);
}

.theme-dark, .theme-light {
  /* Text */
  --text-normal: (fg);
  --header-primary: (fg);
  --interactive-normal: (prLR7);
  --channels-default: (fg);

  --text-muted: (fg);
  --interactive-muted: (fg);

  --header-secondary: (prLR7);
  --interactive-hover: (prLR6);
  --interactive-active: (prLR5);

  /* Background color */
  --background-primary: (bg);
  --background-secondary: (bgDR1);
  --background-secondary-alt: (bgDR2);
  --background-tertiary: (bgDR3);
  --background-floating: (bgLR2);
  --background-accent: (prDR3);
  --channeltextarea-background: var(--background-secondary);
  --modal-background: var(--background-primary);
  --background-modifier-hover: (pr);
  --background-modifier-active: (prl1);
  --background-modifier-selected: (prl2);
  --toast-background: #5e3640 !important;
  --toast-header: #3b1d24 !important;
  --toast-contents: #49292f !important;
  --toast-border: #49292f !important;
  --input-background: var(--background-secondary);

  /* Scrollbar */
  --scrollbar-auto-thumb: (pr);
  --scrollbar-auto-track: (bg);
  --scrollbar-thin-thumb: (pr);
  --scrollbar-thin-track: transparent;

  /* Other */
  --channel-text-area-placeholder: var(--interactive-normal);
  --deprecated-quickswitcher-input-background: var(--background-pr);
}
